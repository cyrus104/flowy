VARS:
  - report_date:
      description: "Date of the report"
  - client_name:
      description: "Client organization name"
  - report_frequency:
      description: "Frequency of report generation"
      default: "monthly"
      options: ['daily', 'weekly', 'monthly', 'quarterly']
  - include_charts:
      description: "Include charts in the report"
      default: true
      options: [true, false]
  - chart_type:
      description: "Type of chart to display"
      default: "bar"
      options: ['bar', 'line', 'pie', 'scatter']

