[bold][green]═══════════════════════════════════════════════════════════════[/green][/bold]

[bold]Client:[/bold] [yellow]{{ client_name }}[/yellow]
[bold]Report Date:[/bold] [yellow]{{ report_date }}[/yellow]
[bold]Frequency:[/bold] [cyan]{{ report_frequency }}[/cyan]

